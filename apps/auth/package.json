    "@nestjs/platform-express": "latest",
    "@rittaschool/shared": "^0.0.28",
    "amqp-connection-manager": "^3.7.0",
    "amqplib": "^0.8.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.11",
    "nest-winston": "^1.6.2",
    "otplib": "^12.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2",
    "winston": "^3.4.0"
